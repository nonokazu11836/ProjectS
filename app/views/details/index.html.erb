<h1>詳細テーブル</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>写真ID</th>
      <th>映っている学生</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.id %></td>
        <td><%= detail.picture_id %></td>
        <td><%= detail.student_id %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

